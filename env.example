# ===========================================
# Product Impact Analyzer - Environment Variables
# ===========================================
# Copia este archivo a .env y completa los valores

# OpenAI Configuration (REQUERIDO)
# Obten tu API key desde: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Langfuse Configuration (REQUERIDO para monitoreo)
# Obten tus credenciales desde: https://cloud.langfuse.com/
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here

# Langfuse Host (REQUERIDO)
# Para Langfuse Cloud (EU): https://cloud.langfuse.com
# Para Langfuse Cloud (US): https://us.cloud.langfuse.com
# Para self-hosted: https://your-langfuse-instance.com
LANGFUSE_HOST=https://cloud.langfuse.com

# Configuración Opcional de Langfuse
# Habilitar/deshabilitar Langfuse completamente
LANGFUSE_ENABLED=true

# Habilitar modo debug para ver logs detallados
LANGFUSE_DEBUG=false

# Configuración de la aplicación
# Puerto en el que se ejecutará la aplicación (opcional)
PORT=8000

# Entorno de la aplicación (opcional)
ENVIRONMENT=development 